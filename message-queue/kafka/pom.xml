                    <groupId>com.database.config</groupId>
                    <artifactId>database-config</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Kafka依赖 -->
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-stream-kafka</artifactId>
