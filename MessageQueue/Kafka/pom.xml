    <parent>
        <groupId>com.messagequeue</groupId>
        <artifactId>MessageQueue</artifactId>
        <version>1.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>

    <groupId>com.demo.kafka</groupId>
    <artifactId>Kafka</artifactId>
    <version>1.0</version>
    <name>Kafka</name>
    <description>Kafka</description>
    <packaging>pom</packaging>

    <properties>
        <java.version>1.8</java.version>
    </properties>
    <modules>
        <module>KafkaPublisher</module>
        <module>KafkaConsumer</module>
        <module>KafkaConfig</module>
