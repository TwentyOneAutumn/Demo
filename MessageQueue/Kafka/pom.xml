            <version>1.0</version>
            <exclusions>
                <exclusion>
                    <!-- DataBase依赖 -->
                    <groupId>com.database</groupId>
                    <artifactId>DataBaseConfig</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <!-- Kafka依赖 -->
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-stream-kafka</artifactId>
        </dependency>
    </dependencies>
